# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ecommerce
DB_NAME=ecommerce

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM="E-Commerce App" <noreply@ecommerce-app.com>

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_WEBHOOK_ENDPOINT_SECRET=we_your_endpoint_secret

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Social Authentication (OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=7200000  # 2 hours in milliseconds
PASSWORD_RESET_EXPIRES=3600000  # 1 hour

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_EXPIRE=86400000  # 24 hours

# External API Keys
SHIPPING_API_KEY=your-shipping-provider-api-key
SMS_API_KEY=your-sms-provider-api-key
ANALYTICS_API_KEY=your-analytics-api-key

# Environment Specific Settings
DEBUG=app:*
ENABLE_SWAGGER=true
API_VERSION=v1

# Database Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
PROMETHEUS_PORT=9090

# CDN and Asset Configuration
CDN_URL=https://cdn.your-domain.com
STATIC_ASSET_URL=https://assets.your-domain.com

# Feature Flags
ENABLE_CART_PERSISTENCE=true
ENABLE_WISHLIST=true
ENABLE_REVIEWS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ADVANCED_SEARCH=true